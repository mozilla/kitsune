# http://editorconfig.org/
# This file is a hint to smart editors about how to behave in this project.

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.html]
indent_size = 2

[*.less]
indent_size = 2

[*.svg]
indent_size = 2

[.travis.yml]
# The travis CLI tool forces 2 spaces. No use fighting it.
indent_size = 2

[*.js]
indent_size = 2

[.circleci/config.yml]
indent_size = 2

[docker-compose.yml]
indent_size = 2

[Makefile]
indent_style = tab
