{
  "name": "Kitsune",
  "description": "Platform for Mozilla Support",
  "repository": {
    "type": "git",
    "url": "git://github.com/mozilla/kitsune.git"
  },
  "scripts": {
    "stylelint": "stylelint kitsune/sumo/static/sumo/scss/**/* --fix && stylelint kss-template/kss-assets/scss/**/*",
    "build:css": "sass kitsune/sumo/static/sumo/scss/screen.scss static/build/screen.css --source-map --load-path 'node_modules/@mozilla-protocol/core/protocol/css'",
    "build:docs:copyfonts": "cp -r node_modules/@mozilla-protocol/core/protocol/fonts static/build/styleguide/static",
    "build:docs:copyprotocolimgs": "cp -r node_modules/@mozilla-protocol/core/protocol/img static/build/styleguide/static",
    "build:docs:copysumoimgs": "mkdir -p static/build/styleguide/static/sumo && cp -r kitsune/sumo/static/sumo/img static/build/styleguide/static/sumo",
    "build:docs:copyjs": "cp -r kitsune/sumo/static/sumo/js static/build/styleguide/static/sumo",
    "build:docs:copystyles": "mkdir -p static/build/styleguide/static/css && cp static/build/screen.css static/build/styleguide/static/css/screen.css && cp static/build/screen.css.map static/build/styleguide/static/css/screen.css.map",
    "build:docs:styles": "sass kss-template/kss-assets/scss/kss.scss static/build/styleguide/css/kss.css",
    "build:docs:kss": "kss --config kss-config.json --custom full",
    "build": "npm-run-all --parallel 'build:*'",
    "deploy:docs": "s3-deploy 'static/build/styleguide/**' --cwd './static/build/styleguide/' --region us-east-2 --bucket lincolnloop-mozillasumo --gzip",
    "watch:stylelint": "onchange 'kitsune/sumo/static/sumo/scss/**/*' -- npm run stylelint",
    "watch:styles": "onchange 'kitsune/sumo/static/sumo/scss/**/*' -- npm run build:css",
    "watch:docs": "onchange 'kitsune/sumo/static/styleguide-examples/*.njk' 'kss-template/**/*' -- npm-run-all 'build:docs:*'",
    "watch:docstyles": "onchange 'static/build/screen.css' -- npm run build:docs:copystyles",
    "watch:docjs": "onchange 'kitsune/sump/static/**/*.js' -- npm run build:docs:copyjs",
    "watch": "npm-run-all --parallel 'watch:*' 'build:docs:*'",
    "run:docs": "browser-sync start --server 'static/build/styleguide' --files 'static/build/styleguide' --no-open",
    "start": "npm-run-all --parallel 'run:docs' 'watch'"
  },
  "license": "MPL-2.0",
  "dependencies": {
    "@mozilla-protocol/core": "10.0.1",
    "babel": "5.8.23",
    "babelify": "5.0.4",
    "bower": "^1.8.8",
    "browser-sync": "^2.26.7",
    "browserify": "9.0.3",
    "chai": "3.2.0",
    "chai-lint": "0.1.1",
    "cssmin": "0.4.3",
    "debowerify": "1.2.0",
    "eslint": "1.10.3",
    "gulp": "3.8.6",
    "gulp-nunjucks": "0.2.2",
    "gulp-watch": "0.6.8",
    "jquery": "2.1.4",
    "jsdom": "11.11.0",
    "kss": "^3.0.0-beta.25",
    "less": "3.10.3",
    "less-plugin-autoprefix": "2.0.0",
    "mocha": "2.3.2",
    "mocha-jsdom": "1.2.0",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^1.3.4",
    "onchange": "^6.1.0",
    "react": "0.13.3",
    "s3-deploy": "^1.4.0",
    "sass": "^1.23.2",
    "sinon": "1.16.1",
    "sinon-chai": "2.8.0",
    "stylelint": "^11.1.1",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-order": "^1.0.0",
    "stylelint-scss": "^3.12.0",
    "uglify-js": "2.6.0",
    "underscore": "1.8.2"
  }
}
