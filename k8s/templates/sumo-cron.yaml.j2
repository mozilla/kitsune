        - name: DMS_UPDATE_WEEKLY_VOTES
          valueFrom:
            secretKeyRef:
              key: dms-update-weekly-votes
              name: {{ SUMO_SECRETS_NAME }}
        - name: ES_HTTP_AUTH
          valueFrom:
            secretKeyRef:
              key: es-http-auth
              name: {{ SUMO_SECRETS_NAME }}
        - name: ES_URLS
          valueFrom:
            secretKeyRef:
              key: es-urls
              name: {{ SUMO_SECRETS_NAME }}
        - name: NEW_RELIC_LICENSE_KEY
          valueFrom:
            secretKeyRef:
              key: new-relic-license-key
              name: {{ SUMO_SECRETS_NAME }}
        - name: REDIS_DEFAULT_URL
          valueFrom:
            secretKeyRef:
              key: redis-default-url
              name: {{ SUMO_SECRETS_NAME }}
        - name: REDIS_HELPFULVOTES_URL
          valueFrom:
            secretKeyRef:
              key: redis-helpfulvotes-url
              name: {{ SUMO_SECRETS_NAME }}
        - name: SECRET_KEY
          valueFrom:
            secretKeyRef:
              key: secret-key
              name: {{ SUMO_SECRETS_NAME }}
        - name: STATSD_CLIENT
          valueFrom:
            secretKeyRef:
              key: statsd-client
