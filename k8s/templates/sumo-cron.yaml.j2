        image: {{ SUMO_IMAGE }}:{{ SUMO_IMAGE_TAG }}
        imagePullPolicy: {{ SUMO_IMAGE_PULL_POLICY }}
        name: sumo-{{ TARGET_ENVIRONMENT }}-web
        resources:
          requests:
            cpu: {{ SUMO_CPU_REQUEST }}
            memory: {{ SUMO_MEMORY_REQUEST }}
          limits:
            cpu: {{ SUMO_CPU_LIMIT }}
            memory: {{ SUMO_MEMORY_LIMIT }}
